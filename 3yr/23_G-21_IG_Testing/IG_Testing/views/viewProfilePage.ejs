<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= targetUser.username %> (@<%= targetUser.username %>) â€¢ Instagram
      photos and videos
    </title>
    <style>
      /* Main Layout */
      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          Helvetica, Arial, sans-serif;
        margin: 0;
        background-color: #fafafa;
        color: #262626;
        display: flex;
        justify-content: center;
      }
      .container {
        max-width: 935px;
        width: 100%;
        padding: 30px 20px;
        display: flex;
        flex-direction: row;
        gap: 30px;
      }
      /* Profile Image */
      .profile-image {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 1px solid #dbdbdb;
      }
      /* Profile Details */
      .profile-details {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 10px;
      }
      .profile-header {
        display: flex;
        align-items: center;
        gap: 20px;
      }
      .profile-header h2 {
        font-size: 28px;
        margin: 0;
        font-weight: 300;
      }
      .profile-header button {
        background-color: #0095f6;
        color: white;
        border: none;
        padding: 5px 9px;
        border-radius: 4px;
        font-size: 14px;
        cursor: pointer;
      }
      .profile-header button:hover {
        background-color: #007bb5;
      }
      /* Stats */
      .profile-stats {
        display: flex;
        gap: 20px;
        font-size: 16px;
      }
      .profile-stats p {
        margin: 0;
      }
      .profile-stats strong {
        font-weight: 600;
      }
      /* Bio */
      .profile-bio {
        font-size: 14px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- Profile Picture -->
      <div>
        <img
          src="/images/profiles/<%= targetUser.profileImage || 'def_PFP.png' %>"
          alt="<%= targetUser.username %>'s profile picture"
          class="profile-image"
        />
      </div>
      <!-- Profile Details -->
      <div class="profile-details">
        <div class="profile-header">
          <h2><%= targetUser.username %></h2>
          <% if (!isFollowing) { %>
          <button onclick="toggleFollow('<%= targetUser._id %>', this)">
            Follow
          </button>
          <% } else { %>
          <button onclick="toggleFollow('<%= targetUser._id %>', this)">
            Unfollow
          </button>
          <% } %>
        </div>
        <div class="profile-stats">
          <p><strong><%= targetUser.posts.length %></strong> posts</p>
          <p><strong><%= targetUser.followers.length %></strong> followers</p>
          <p><strong><%= targetUser.following.length %></strong> following</p>
        </div>
        <div class="profile-bio">
          <p><strong><%= targetUser.name %></strong></p>
          <p><%= targetUser.bio %></p>
        </div>
      </div>
    </div>

    <!-- Post Grid (if following) -->
      <% if (isFollowing) { %>
      <div class="post-grid">
        <% targetUser.posts.forEach(post => { %>
        <div>
          <img
            src="/images/posts/<%= post.imagePath %>"
            alt="Post by <%= targetUser.username %>"
          />
        </div>
        <% }) %>
      </div>
      <% } %>
    </div>

    <script>
      function toggleFollow(userId, button) {
        fetch(`/follow/${userId}`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ action: button.innerText.toLowerCase() }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.success) {
              button.innerText = data.isFollowing ? "Unfollow" : "Follow";
            }
          })
          .catch((error) => console.error("Error:", error));
      }
    </script>
  </body>
</html>
