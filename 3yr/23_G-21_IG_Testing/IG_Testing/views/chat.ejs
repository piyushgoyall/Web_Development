<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat with <%= otherUser.username %></title>
    <link rel="stylesheet" href="/styles/chat.css" />
  </head>
  <body>
    <h2>Chat with <%= otherUser.username %></h2>

    <div id="chatContainer">
      <div id="messages">
        <% chat.messages.forEach(message => { %>
        <div
          class="<%= message.sender.toString() === loggedInUser._id.toString() ? 'my-message' : 'their-message' %>"
        >
          <p><%= message.text %></p>
        </div>
        <% }) %>
      </div>

      <form id="messageForm" action="/sendMessage" method="POST">
        <input type="hidden" name="chatId" value="<%= chat._id %>" />
        <textarea
          name="message"
          placeholder="Type your message..."
          required
        ></textarea>
        <button type="submit">Send</button>
      </form>
    </div>

    <script src="/scripts/chat.js"></script>
  </body>
</html>
 