<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Follow Requests</title>
    <link rel="stylesheet" href="./stylesheets/followRequests.css" />
    <!-- Link to your CSS file -->
    <script>
      function acceptRequest(username) {
        fetch(`/acceptFollowRequest/${username}`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.success) {
              alert(`${username} has been accepted!`);
              location.reload(); // Reload the page to update the list
            } else {
              alert("Failed to accept follow request.");
            }
          });
      }
    </script>
  </head>
  <body>
    <div class="container">
      <h1>Follow Requests</h1>
      <ul>
        <% user.followRequests.forEach(request => { %>
        <li>
          <a href="/user/<%= request.username %>"><%= request.username %></a>
          <button onclick="acceptRequest('<%= request.username %>')">
            Accept
          </button>
        </li>
        <% }); %>
      </ul>
      <% if (user.followRequests.length === 0) { %>
      <p>No follow requests.</p>
      <% } %>
      <a href="/profile">Back to Profile</a>
      <!-- Link to go back to the profile page -->
    </div>
  </body>
</html>
