<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Instagram - Upload Post</title>
    <link rel="stylesheet" href="./stylesheets/upload.css" />
    <script src="/javascripts/theme.js"></script>
  </head>
  <body>
    <div class="container">
      <header>
        <div class="logo">Instagram</div>
        <nav>
          <a href="/feed">Home</a>
          <a href="/myProfile">Profile</a>
        </nav>
      </header>

      <main class="upload-section">
        <div class="upload-card">
          <h2>Share Your New Post</h2>
          <form action="/upload" method="post" enctype="multipart/form-data">
            <label for="post-image" class="file-label">
              <input
                type="file"
                id="post-image"
                name="image"
                accept="image/*"
                required
                hidden
              />
              <span>Choose an Image</span>
            </label>
            <textarea
              name="caption"
              rows="4"
              placeholder="Write a captivating caption..."
              required
            ></textarea>
            <button type="submit">Upload Post</button>
          </form>
        </div>
      </main>

      <footer>
        <p>&copy; 2024 Instagram Clone</p>
      </footer>
    </div>

    <!-- JavaScript to update the label with the selected file name -->
    <script>
      document
        .getElementById("post-image")
        .addEventListener("change", function () {
          const fileName = this.files[0]
            ? this.files[0].name
            : "Choose an Image";
          document.querySelector(".file-label span").textContent = fileName;
        });
    </script>
  </body>
</html>
